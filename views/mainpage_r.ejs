<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/mainpagestyle_r.css">
    <style>
        /* Styling for the theme selector */
        .theme-selector {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .theme-selector select {
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 4px;
            border: 2px solid #000;
            font-family: 'Courier New', Courier, monospace;
        }

        .theme-selector button {
            padding: 5px 10px;
            font-size: 14px;
            border-radius: 4px;
            border: 2px solid #000;
            background-color: #000;
            color: white;
            cursor: pointer;
            font-family: 'Courier New', Courier, monospace;
        }

        .theme-selector button:hover {
            background-color: #444;
        }
    </style>
</head>
<body>
    <!-- Theme Selector Positioned at Top Right -->
    <div class="theme-selector">
        <label for="theme" style="font-family: 'Courier New', Courier, monospace;">Theme:</label>
        <select id="theme" onchange="changeTheme(this.value)">
            <option value="classic" <%= theme === "classic" ? "selected" : "" %>>Classic</option>
            <option value="retro" <%= theme === "retro" ? "selected" : "" %>>Retro</option>
        </select>
    </div>

    <!-- Page Title -->
    <div class="page-title">
        <span><i><div class="logo"><%= logoText %></div></i></span>
    </div>
    <hr class="title-line">

    <!-- Authentication Section -->
    <div class="auth-container">
        <h2 style="font-family: 'Courier New', Courier, monospace;">Login</h2>
        <form id="loginForm">
            <input size="40" style="margin-bottom: 20px; padding: 5px; border: 3px solid #000; font-family: 'Courier New', Courier, monospace;" 
                   type="email" id="loginEmail" placeholder="Enter your email" required><br>
            <input size="40" style="margin-bottom: 20px; padding: 5px; border: 3px solid #000; font-family: 'Courier New', Courier, monospace;" 
                   type="password" id="loginPassword" placeholder="Enter your password" required><br>
            <div class="button-container">
                <button class="button" type="button" onclick="login()">Login</button><br>
                <button class="button" type="button" onclick="signup()">Sign Up</button>
            </div>
        </form>
    </div>

    <script>
        function signup() {
            return null;
        }
        function login() {
            return null;
        }

        function changeTheme(theme) {
            // Set the theme value in localStorage (or send it to the backend if needed)
            document.cookie = "selectedTheme=" + theme;
        location.reload();

        }
    </script>
</body>
</html>
